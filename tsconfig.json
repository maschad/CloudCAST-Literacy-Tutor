{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "types": [
      "core-js",
      "firebase",
      "jasmine",
      "node"
    ]
  },

  "exclude": [
    "node_modules",
    "target",
    "tmp"
  ]
}
